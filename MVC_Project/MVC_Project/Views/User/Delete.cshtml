@model MVC_Project.Models.User.User

<h1>Create</h1>
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Are you sure you want to delete this user?</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="DoB"></label><br/>
            <input type="date" asp-for="DoB" disabled /><br/>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-secondary style=" width:150px"">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
