@model MVC_Project.Models.User.User

@{
    ViewData["Title"] = "Details";
    Dictionary<string, object> ModelDict = new Dictionary<string, object>()
    {
        {"Name",Model.Name},
        {"Surname",Model.Surname},
        {"Email",Model.Email},
        {"Date of Birth",Model.DoB},
        {"Gender",Model.Gender},
        {"Creation Date",Model.createdAt},
        {"Updated Date",Model.updatedAt},
    };
}

<h1>Details</h1>

<div>
    <h4>Shop</h4>
    <hr />
    <dl class="row">
        @foreach (var key in ModelDict.Keys)
        {
            <dt class="col-sm-2">
                @key
            </dt>
            <dd class="col-sm-10">
                @ModelDict[key]
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="width:150px">Edit</a>
    <a asp-action="Index" class="btn btn-primary" style="width:150px">Back to List</a>
</div>
